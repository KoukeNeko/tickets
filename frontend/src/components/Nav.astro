import * as i18n from "src/i18n";
import SITCONLogo from "@assets/img/SITCON.svg";
const l = i18n.l(Astro.url);
const t = i18n.t(i18n.local(Astro.url.pathname), {
	about: {
		en: "About",
		"zh-Hant": "關於",
		"zh-Hans": "关于"
	},
	blog: {
		en: "Blog",
		"zh-Hant": "部落格",
		"zh-Hans": "博客"
	}
});
---

<nav>
	<a href={l("/")}><img src={SITCONLogo.src} alt="SITCON Logo" /></a>
