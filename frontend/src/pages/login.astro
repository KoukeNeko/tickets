---
import Layout from "../layouts/Layout.astro";
import * as i18n from "src/i18n";
const lang = i18n.local(Astro.url.pathname);
const t = i18n.t(lang, {
	login: {
		"zh-Hant": "登入／註冊",
		"zh-Hans": "登录／注册",
		en: "Login / Register"
	},
	continue: {
		"zh-Hant": "繼續",
		"zh-Hans": "继续",
		en: "Continue"
	}
});
const l = i18n.l(Astro.url);
---

<Layout i18n={t.t} path="login" title={t.login} theme="#FFF" lang={lang}>
	<main transition:animate="fade">
		<section>
			<div class="login-container" id="magic-link-form">
				<h1>{t.login}</h1>
				<label for="email">Email</label>
				<input type="email" name="email" id="email" />
				<button id="submit-btn" class="button" type="submit" onclick="login()">{t.continue}</button>
			</div>
			<div class="sent-container">
				<h2>{t.sent}</h2>
				<p>{t.message}</p>
			</div>
			<div class="error-container">
				<h2>{t.error}</h2>
				<p>{t.errorMessage}</p>
			</div>
		</section>
	</main>

	<style is:inline>
		body {
			position: relative;
		}
		h1 {
			margin-block: 1rem;
			text-align: center;
		}
		label {
			display: block;
			margin-bottom: 0.5rem;
			font-weight: bold;
		}
		input {
			border: 2px solid var(--black);
			width: 20rem;
			padding: 0.5rem;
			max-width: 100%;
		}
		section {
			position: absolute;
			top: 50%;
			left: 50%;
			transform: translate(-50%, -50%);
			max-width: 100%;
			padding: 1rem;
		}

		.login-container {
			/* margin: 2rem auto;
			width: fit-content; */
		}

		section .button {
			margin: 1rem auto;
		}
	</style>

	<script></script>
</Layout>
